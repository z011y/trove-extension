{
  "manifest_version": 3,
  "name": "Trove",
  "description": "Store and organize your favorite products from across the internet",
  "version": "0.0.0.1",
  "icons": {
    "16": "trove_16.png",
    "32": "trove_32.png",
    "48": "trove_48.png",
    "128": "trove_128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "trove.png"
  }
}
